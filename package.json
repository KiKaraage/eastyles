{
  "name": "eastyles",
  "description": "Easy web styling for everyone",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "wxt -b firefox",
    "dev:crx": "wxt",
    "build": "wxt build -b firefox",
    "build:crx": "wxt build",
    "builds": "wxt build && wxt build -b firefox",
    "zip": "wxt zip -b firefox",
    "zip:crx": "wxt zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/vite": "^4.1.11",
    "@wxt-dev/browser": "^0.1.1",
    "@wxt-dev/storage": "^1.1.1",
    "@wxt-dev/webextension-polyfill": "^1.0.0",
    "iconoir-react": "^7.11.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "vitest": "^3.2.4",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.44.0",
    "@html-eslint/parser": "^0.44.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@wxt-dev/module-react": "^1.1.3",
    "daisyui": "^5.0.50",
    "eslint": "^9.32.0",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wxt": "^0.20.6"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "spawn-sync"
  ]
}
