    "@types/stylus": "^0.48.43",
    "@vitest/coverage-v8": "^3.2.4",
    "@wxt-dev/browser": "^0.1.4",
    "@wxt-dev/module-react": "^1.1.5",
    "daisyui": "^5.3.9",
    "globals": "^16.4.0",
    "jsdom": "^26.1.0",
    "less": "^4.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stylus": "^0.64.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "6.0.0-beta.4",
    "vitest": "^3.2.4",
    "wxt": "^0.20.11"
