{
  "name": "eastyles",
  "description": "Easy web styling for everyone",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "wxt -b firefox",
    "dev:crx": "wxt",
    "build": "wxt build -b firefox",
    "build:crx": "wxt build",
    "builds": "wxt build && wxt build -b firefox",
    "zip": "wxt zip -b firefox",
    "zip:crx": "wxt zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
