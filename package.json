    "@wxt-dev/i18n": "^0.2.4",
    "@wxt-dev/storage": "^1.2.5",
    "@wxt-dev/webextension-polyfill": "^1.0.0",
    "codemirror": "^6.0.2",
    "iconoir-react": "^7.11.0",
    "tailwindcss": "^4.1.14",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.1.12"
