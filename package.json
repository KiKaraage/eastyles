{
  "name": "eastyles",
  "description": "Easy web styling for everyone",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "scripts": {
    "dev": "wxt -b firefox",
    "dev:crx": "wxt",
    "buildf": "wxt build -b firefox",
    "buildc": "wxt build",
    "builds": "wxt build 2>/dev/null && wxt build -b firefox 2>/dev/null",
    "zip": "wxt zip -b firefox",
    "zip:crx": "wxt zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "npx biome check --fix .",
    "lint:all": "npx biome check .",
    "lint:fix": "npx biome check --fix .",
    "test:all": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
